<%= form_for(@movie) do |f|%>

<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :rating %>
	<%= f.number_field :rating %>
</p>
<p>
	<%= f.label :total_gross %>
	<%= f.number_field :total_gross %>
</p>
<p>
	<%= f.label :kinostart %>
	<%= f.datetime_select :kinostart %>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_area :description %>
</p>
<p><%= f.submit %></p>

<p> <%= link_to "Back without saving", movies_path %> </p>


<%end%>