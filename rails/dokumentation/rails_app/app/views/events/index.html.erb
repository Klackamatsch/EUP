<h1>Events</h1>


<%= "<h2>listing generated at:  #{Time.now}</h2>".html_safe %>  
 

<p><%= link_to "Neues Event erstellen", new_event_path %></p>


 	<table width= 100% border= 2pt>
 		<tr>
 			<th>Name</th>
 			<th>Ort</th>
 			<th>Preis</th>
 			<th>wann</th>
 			<th>Beschreibung</th>
 			<th> Show </th>
 			<th> EDIT </th>
 			<th> LÃ¶schen </th>
 		</tr>

 		<% @events.each do |event| %>
 		<tr>
